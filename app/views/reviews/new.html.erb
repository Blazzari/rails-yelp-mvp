<div class = "container">
  <h1>New review</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, input_html: { min: '0',max: '5' }, collection: 0..5 %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
    <%= link_to "Go back to #{@restaurant.name} page !", @restaurant, class: "btn btn-primary" %>
  <% end %>
</div>
